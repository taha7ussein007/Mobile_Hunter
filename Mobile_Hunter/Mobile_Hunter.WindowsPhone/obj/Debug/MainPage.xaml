        <Grid Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <ad:AdControl x:Name="adDuplexAd" AppId="131819" Width="355" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        </Grid>
    </Grid>



